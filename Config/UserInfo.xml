			<result property="DEL_FLG" column="DEL_FLG" />
		</resultMap>
	</resultMaps>
	<statements>
		<statement id="FindUserEntity" resultMap="User">
			SELECT TOP (1) *
			FROM TB_USER_INFO
			where Username = #USER_NAME#
			and Password = #PASSWORD#
			and DEL_FLG = 0
